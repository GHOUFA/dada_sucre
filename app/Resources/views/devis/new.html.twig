{% extends 'base.html.twig' %}

{% block body %}

        <div class="container">
            <img style="width:100%;height:400px;" src="{{ asset('images/pro1.png') }}">
        </div>
        <div class="container">
            <div class="section-title row text-center">
                <div class="col-md-12">
                    <h3>DEMANDE DE DEVIS SUCRE EN BUCHETTE</h3>
                </div>
                <!-- end col -->
            </div>
            <div class="center">
                <div class="panel-body">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                        <div class="form-group">
                            <label class="col-md-4">Nom et prénom </label>
                            <div class="col-md-6 col-sm-6">
                                {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'required':'required'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4">Votre entreprise </label>
                            <div class="col-md-6 col-sm-6">
                                {{ form_widget(form.compane, { 'attr': {'class': 'form-control', 'required':'required'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                        </div>
                        <div class="form-group">
                            <label class="col-md-4">Votre adresse </label>
                            <div class="col-md-6 col-sm-6">
                                {{ form_widget(form.localite, { 'attr': {'class': 'form-control', 'required':'required'}}) }}
                            </div>
                        </div>
                    <div class="form-group">
                    </div>
                        <div class="form-group">
                            <label class="col-md-4">Type de produit </label>
                            <div class="col-md-6 col-sm-6">
                                {{ form_widget(form.typeProduct, { 'attr': {'class': 'form-control', 'required':'required'}}) }}
                            </div>
                        </div>
                    <div class="form-group">
                    </div>
                        <div class="form-group">
                            <label class="col-md-4">Qualité demandée </label>
                            <div class="col-md-6 col-sm-6">
                                {{ form_widget(form.quality, { 'attr': {'class': 'form-control', 'required':'required'}}) }}
                            </div>
                        </div>
                    {{ form_rest(form) }}
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                        <button type="submit" value="SEND" id="submit" class="btn btn-light btn-radius btn-brd grd1 btn-block">SEND</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

{% endblock %}