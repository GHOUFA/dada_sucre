{#</div>#}

<div id="login-wrapper" class="clearfix">
    <div class="main-col">
        {#<img src="{{asset('back/img/beoro.png')}}" alt="" class="logo_img" />#}
        <div class="panel">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    </div>
